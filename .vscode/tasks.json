{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\Strawberry\\c\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Build SDL2 Program",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",                 // Debugging symbols
                "main.c",             // Source file
                "-o", "pong",         // Output executable
                "-IC:/Users/Nicholas/OneDrive/Documents/SDL-release-2.30.7/include",  // Path to SDL2 headers
                "-LC:/Users/Nicholas/OneDrive/Documents/SDL-release-2.30.7/lib",      // Path to SDL2 libraries
                "-lmingw32", "-lSDL2main", "-lSDL2", "-mwindows"  // Link SDL2
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ],
    "version": "2.0.0"
}